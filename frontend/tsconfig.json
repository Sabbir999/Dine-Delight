{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./assets/js/dist",
    "rootDir": "./assets/js/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
  "lib": ["ES2016", "DOM"],
    "sourceMap": true,
    "removeComments": true
  },
  "include": ["assets/js/src/**/*"],
  "exclude": ["node_modules"]
}